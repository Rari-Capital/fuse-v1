{
  "name": "fuse-v1",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "prettier --check 'src/**/*.sol' && solhint --config .solhint.json 'src/**/*.sol'",
    "lint:fix": "prettier --write 'src/**/*.sol' && solhint --config .solhint.json 'src/**/*.sol' --fix",
    "hh:build": "hardhat compile",
    "hh:clean": "hardhat clean",
    "scripts:admin": "ts-node scripts/admin.ts",
    "scripts:interfaces": "ts-node scripts/interfaces.ts",
    "scripts:poke": "ts-node scripts/poke.ts",
    "prepare": "husky install && npm run prepare:abis",
    "prepare:abis": "./abi/scripts/typechain.sh && ./abi/scripts/tsconfig/tsconfig.sh && ./abi/scripts/typescript/typescript.sh && ./abi/scripts/after-build/after-build.sh"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "@testoneortwoorthreeorfive/arbitrum": "^1.0.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/hardhat": "^6.0.0",
    "@types/argparse": "^2.0.10",
    "@types/dotenv": "^8.2.0",
    "@types/glob": "^7.2.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "argparse": "^2.0.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^8.0.3",
    "hardhat": "^2.9.6",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.1",
    "joi": "^17.6.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "winston": "^3.7.2"
  },
  "lint-staged": {
    "*.sol": "prettier --write 'src/**/*.sol'"
  },
  "workspaces": [
    "abi/packages/arbitrum",
    "abi/packages/core",
    "abi/packages/periphery",
    "abi/packages/oracles",
    "abi/packages/liquidators",
    "abi/packages/utils"
  ]
}
